@model IndexViewModel

@if (Model.Ads.Count == 0)
{
    <div style="text-align:center" class="mt-5">
        <h1>You do not have any ads listed currently</h1>
    </div>
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            @foreach (var a in Model.Ads)
            {
                <div class="bg-light rounded-3 p-5 mt-3">
                    <h5>Listed by @a.Name</h5>
                    <h5>Listed on @a.DateCreated.ToLongDateString()</h5>
                    <h5>Phone Number: @a.Number</h5>
                    <h3>Details:</h3>
                    <p>@a.Details</p>
                    <form method="post" action="/home/deletead">
                        <div style="text-align:right;">
                            <input type="hidden" name="id" value="@a.Id" />
                            <button style="font-size:30px; border:none; "><i style="color:red;" class="bi bi-trash3"></i></button>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>